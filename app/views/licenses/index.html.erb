<% @page_title = 'Listing Licenses' %>

<p>View more details on all of the <%= link_to('Creative Commons Licenses', 'http://creativecommons.org/about/licenses') %>.</p>
	
	<table class='listing'>
  <tr valign='top'>
    <th></th>
    <% if current_user_is_admin? -%><th colspan='3'>Admin</th><% end %>
  </tr>

<% @licenses.each do |license| %>
  <tr class='row<%= cycle(1, 2) %>' valign='top'>
		<td><%= license_button(license) %></td>
		<% if current_user_is_admin? -%>
    <td><%= link_to 'Show', license %></td>
    <td><%= link_to 'Edit', edit_license_path(license) %></td>
    <td><%= link_to 'Destroy', license, :confirm => 'Are you sure?', :method => :delete %></td>
		<% end %>
  </tr>
<% end %>
</table>
