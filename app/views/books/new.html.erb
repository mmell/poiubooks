<% @page_title = 'New book' %>

<% form_for(@book) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :user_id %><br />
    <%= f.text_field :user_id %>
  </p>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :category_id %><br />
    <%= f.text_field :category_id %>
  </p>
  <p>
    <%= f.label :reward %><br />
    <%= f.text_field :reward %>
  </p>
  <p>
    <%= f.label :license_id %><br />
    <%= f.text_field :license_id %>
  </p>
  <p>
    <%= f.label :terms %><br />
    <%= f.text_area :terms %>
  </p>
