<% @page_title = 'Listing Books' %>

<table class='listing'>
  <tr valign='top'>
    <th>User</th>
    <th>Title</th>
    <th>Category</th>
    <th>Reward</th>
    <th>License</th>
    <th>Terms</th>
  </tr>

<% @books.each do |book| %>
  <tr class='row<%= cycle(1, 2) %>' valign='top'>
    <td><%=h book.user_id %></td>
    <td><%=h book.title %></td>
    <td><%=h book.category_id %></td>
    <td><%=h book.reward %></td>
    <td><%=h book.license_id %></td>
    <td><%=h book.terms %></td>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New book', new_book_path %>