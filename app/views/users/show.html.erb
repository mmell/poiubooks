<% @page_title = @user.full_name %>

<p>
  <b>Name:</b>
  <%=h @user.full_name %>
</p>

<p>
  <b>Login:</b>
  <%=h @user.login %>
</p>

<p>
  <b>Email:</b>
  <%=h @user.email %>
</p>

<p>
  <b>Image:</b>
  <%=h @user.image %>
</p>

<p>
  <b>Statement:</b>
  <%=h @user.description %>
</p>

<p>
  <b>Admin?:</b>
  <%= display_is_admin(@user) %>
</p>


<%= link_to 'Edit', edit_user_path(@user) %>