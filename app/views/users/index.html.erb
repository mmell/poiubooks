<% @page_title = 'Listing Users' %>

<table class='listing'>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Image</th>
    <th>Description</th>
    <th>Is admin</th>
  </tr>

<% @users.each do |user| %>
  <tr class='row<%= cycle(1, 2) %>' valign='top'>
    <td><%=h user.full_name %></td>
    <td><%=h user.login %></td>
    <td><%=h user.email %></td>
    <td><%=h user.image %></td>
    <td><%=h user.description %></td>
    <td><%=h user.is_admin %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New user', new_user_path %>