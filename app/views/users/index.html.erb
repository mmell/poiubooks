<% @page_title = 'Listing Users' %>

<table class='listing'>
  <tr>
    <th>Name</th>
    <% if current_user_is_admin? -%><th>Email</th><% end -%>
    <th>Image</th>
    <th>Description</th>
    <th>Is admin</th>
    <% if current_user_is_admin? -%><th colspan='3'>Admin</th><% end %>
  </tr>

<% @users.each do |user| %>
  <tr class='row<%= cycle(1, 2) %>' valign='top'>
    <td><%=h user.full_name %></td>
    <td><%=h user.login %></td>
    <% if current_user_is_admin? -%><td><%=h user.email %></td><% end -%>
    <td><%=h user.image %></td>
    <td><%=h user.description %></td>
    <td><%=h user.is_admin %></td>
		<% if current_user_is_admin? -%>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
		<% end -%>
  </tr>
<% end %>
</table>
