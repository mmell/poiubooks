<% @page_title = "Editing #{@chapter.type}: #{@chapter.title}" %>
<h2><%= @chapter.parent.title.titleize %></h2>
<% form_for(@chapter) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content, :size => TextFieldSize %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to "Back to #{@chapter.parent.title}", @chapter.parent %>
