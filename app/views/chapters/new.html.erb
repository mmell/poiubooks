<% @page_title = "New chapter for: #{@book.title}" %>

<%= render(:partial => 'owner_nav' ) %>

<% form_for([@book, @chapter]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content, :size => TextFieldSize %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>
