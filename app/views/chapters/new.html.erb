<% @page_title = "New chapter for #{@book.title}" %>

<% form_for(@chapter, :url => {:action => :create, :book_id => @book.id}) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.check_box :is_sub_chapter %> <%= f.label "This is a sub-chapter" %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content, :size => TextFieldSize %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back to the Book', book_path(@book) %>